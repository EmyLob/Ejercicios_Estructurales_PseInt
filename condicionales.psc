Algoritmo condicionales
	// 1. Definir variables
	Definir num1 Como Entero;
	
	// 2. Asignación de datos (entrada del usuario)
	Escribir 'Escriba un numero entero:';
	Leer num1;
	
	// 3. Procesar datos (condicional para validar signo del número)
	Si num1 < 0 Entonces
		// 4. Mostrar resultados
		Escribir 'El numero es negativo';
	SiNo
		// 4. Mostrar resultados
		Escribir 'El numero es positivo';
	FinSi
FinAlgoritmo

